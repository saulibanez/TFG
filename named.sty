\let\@internalcite\cite
\def\cite{\def\citeauthoryear##1##2{##1, ##2}\@internalcite}
\def\shortcite{\def\citeauthoryear##1##2{##2}\@internalcite}
% \def\@biblabel#1{\def\citeauthoryear##1##2{##1, ##2}[#1]\hfill}
\def\@biblabel#1{%
    \def\citeauthoryear##1##2{%
      \def \@@first  {##2}%
      \def \@@second {}%
      \ifx \@@first \@@second
         ##1%
      \else
         ##1, ##2%
      \fi
      \let \@@first = \relax
      \let \@@second = \relax
    }%
    [#1]\hfill
}